{% include 'page-header' with title: page.title %}

<section class="contact">
  <div class="contact__container section--standard">
    <div class="contact__details">
      {%- if section.settings.heading != blank -%}
        <h2 class="type-heading-1 mt0">{{ section.settings.heading }}</h2>
        <div class="type-body-regular">
          {{ section.settings.subheading }}
        </div>

        <div class="contact__social">
          {% include 'social-icons' %}
        </div>
      {%- endif -%}
    </div>

    <div class="contact__form">
      <div class="type-body-regular rte">{{ page.content }}</div>

        {% form 'contact' %}

          {% if form.posted_successfully? %}
            <p class="form-success">
              {{ 'contact.form.post_success' | t }}
            </p>
          {% endif %}

          {{ form.errors | default_errors }}

          <label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
          <input type="text"
            name="contact[name]"
            id="ContactFormName"
            class="input-reset input w-100"
            placeholder="{{ 'contact.form.name' | t }}"
            value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">

          <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
          <input type="email"
            name="contact[email]"
            id="ContactFormEmail"
            class="input-reset input w-100"
            placeholder="{{ 'contact.form.email' | t }}"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            spellcheck="false"
            autocomplete="off"
            autocapitalize="off">

          <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
          <input type="tel"
            name="contact[phone]"
            id="ContactFormPhone"
            class="input-reset input w-100"
            placeholder="{{ 'contact.form.phone' | t }}"
            value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            pattern="[0-9\-]*">

          <label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
          <textarea rows="10"
            name="contact[body]"
            id="ContactFormMessage"
            class="input-reset input w-100"
            placeholder="{{ 'contact.form.message' | t }}">
            {%- if form.body -%}
              {{- form.body -}}
            {%- endif -%}
          </textarea>

          <button type="submit" class="bttn">{{ 'contact.form.send' | t }}</button>

        {% endform %}

    </div>
  </div>

</section>

{% schema %}
  {
    "name": "Contact",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Let's talk"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Subheading",
        "default": "<p>Phone: 123-456-7890<\/p>\n<p>Email: hello@yourstore.com<\/p>"
      }
    ]
  }
{% endschema %}