  {
    "name": "Slideshow",
    "settings": [
      {
        "type": "select",
        "id": "aspect_ratio",
        "label": "Aspect ratio",
        "options": [
          { "value": "full_height", "label": "Full height" },
          { "value": "3_2", "label": "3:2" },
          { "value": "unconstrained", "label": "Unconstrained" }
        ],
        "default": "full_height"
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
