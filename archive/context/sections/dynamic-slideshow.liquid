          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link text",
            "info": "The entire slide will become a link if this setting is left blank."
          },
          {
            "type": "select",
            "id": "link_style",
            "label": "Link style",
            "options": [
              { "value": "button", "label": "Button" },
              { "value": "arrow_link", "label": "Link with arrow" }
            ],
            "default": "button"
          },
          {
            "type": "header",
            "content": "Style"
          },
          {
            "type": "range",
            "id": "overlay_opacity",
            "label": "Overlay opacity",
            "min": 0,
            "max": 100,
            "step": 10,
            "default": 60,
            "unit": "%"
          },
          {
            "type": "color",
            "id": "overlay_color",
            "label": "Overlay color",
            "default": "#707070"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Text color",
            "default": "#ffffff"
          },
          {
            "type": "range",
            "id": "heading_max_width",
            "label": "Max width of heading",
            "min": 8,
            "max": 30,
            "step": 1,
            "default": 16
          },
          {
            "type": "range",
            "id": "text_max_width",
            "label": "Max width of text",
            "min": 16,
            "max": 38,
            "step": 1,
            "default": 24
          },
          {
            "type": "select",
            "id": "horizontal_text_position",
            "label": "Horizontal text position",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ],
            "default": "left"
          },
          {
            "type": "select",
            "id": "vertical_text_position",
            "label": "Vertical text position",
            "options": [
              { "value": "top", "label": "Top" },
              { "value": "middle", "label": "Middle" },
              { "value": "bottom", "label": "Bottom" }
            ],
            "default": "middle"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slideshow",
        "category": "Image",
        "blocks": [
