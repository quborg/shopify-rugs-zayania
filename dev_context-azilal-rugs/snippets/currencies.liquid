{% if settings.show_multiple_currencies %}

  {{ "//cdn.shopify.com/s/javascripts/currencies.js" | script_tag }}

  <script>
    var currencyOpts = {
      shop: '{{ shop.currency }}',
      default: '{{ settings.default_currency | default: shop.currency }}',
      format: '{{ settings.currency_format | default: 'money_with_currency_format' }}',
      storageKey: 'context-currency',
      formats: {
        '{{ shop.currency }}': {
          'money_with_currency_format': {{ shop.money_with_currency_format | strip_html | json }},
          'money_format': {{ shop.money_format | strip_html | json }}
        }
      }
    }
  </script>

{% endif %}