{%- if section.settings.enabled == true -%}
  {% include 'section-testimonials', with type: 'static-testimonials' %}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} .testimonials__icon {
    width: {{ section.settings.icon_width }}px;
  }
</style>

{% schema %}
  {
    "name": "Testimonials",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled",
        "label": "Enable",
        "default": false
      },
      {
        "type": "header",
        "content": "Icon style"
      },
      {
        "type": "range",
        "id": "icon_width",
        "label": "Width",
        "min": 40,
        "max": 150,
        "step": 5,
        "default": 40,
        "unit": "px"
      },
      {
        "type": "header",
        "content": "Section style"
      },
      {
        "type": "checkbox",
        "id": "outline",
        "label": "Outline section",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "textarea",
            "id": "quote",
            "label": "Quote"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author"
          }
        ]
      }
    ]
  }
{% endschema %}